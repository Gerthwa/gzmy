rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Çiftler koleksiyonu
    match /couples/{coupleCode} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.partner1Id == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.partner1Id == request.auth.uid || 
        resource.data.partner2Id == request.auth.uid
      );
    }
    
    // Mesajlar koleksiyonu
    match /messages/{messageId} {
      allow read: if isAuthenticated() && isCoupleMember(resource.data.coupleCode);
      allow create: if isAuthenticated() && isCoupleMember(request.resource.data.coupleCode);
      allow update: if isAuthenticated() && isCoupleMember(resource.data.coupleCode);
    }
    
    // Tokenlar koleksiyonu
    match /tokens/{userId} {
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow write: if isAuthenticated() && userId == request.auth.uid;
    }
    
    // Yardımcı fonksiyonlar
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isCoupleMember(coupleCode) {
      return exists(/databases/$(database)/documents/couples/$(coupleCode));
    }
  }
}
