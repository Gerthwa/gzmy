<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_widget"
    android:padding="18dp"
    android:gravity="center_vertical">

    <!-- Header row: brand + partner name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_heart"
            android:contentDescription="Heart" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="gzmy"
            android:textColor="#FF4081"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="0.06"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvWidgetPartnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#A0A8C8"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Last message -->
    <TextView
        android:id="@+id/tvWidgetLastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Henüz mesaj yok"
        android:textColor="#F5F5FF"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp" />

    <!-- Miss level progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvWidgetMissLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—"
            android:textColor="#FF4081"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressWidgetMiss"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#FF4081"
            android:progressBackgroundTint="#20FFFFFF" />

    </LinearLayout>

    <!-- Drawing preview -->
    <ImageView
        android:id="@+id/ivWidgetDrawing"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="Partner cizimi"
        android:visibility="gone"
        android:adjustViewBounds="true" />

</LinearLayout>
