<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_widget"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Başlık satırı + Partner ismi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart"
            android:contentDescription="Heart" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="gzmy"
            android:textColor="#E84576"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="6dp" />

        <TextView
            android:id="@+id/tvWidgetPartnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#B0B0C8"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Son not / mesaj -->
    <TextView
        android:id="@+id/tvWidgetLastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Henüz mesaj yok"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp" />

    <!-- Özlem seviyesi: emoji + ProgressBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvWidgetMissLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—"
            android:textColor="#E84576"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressWidgetMiss"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#E84576"
            android:progressBackgroundTint="#30FFFFFF" />

    </LinearLayout>

</LinearLayout>
