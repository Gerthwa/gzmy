<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingTop="100dp"
        android:paddingBottom="48dp">

        <!-- Decorative sparkle -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_sparkle"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:alpha="0.7"
            android:contentDescription="@null" />

        <!-- Gradient accent line -->
        <View
            android:layout_width="36dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_header_gradient"
            android:layout_marginBottom="36dp" />

        <!-- Brand identity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gzmy"
            android:textColor="@color/primary_pink"
            android:textSize="56sp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.14"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seni hissediyorum"
            android:textColor="@color/text_tertiary"
            android:textSize="15sp"
            android:letterSpacing="0.10"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="64dp" />

        <!-- ── Initial Buttons ── -->
        <LinearLayout
            android:id="@+id/layoutInitialButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateCouple"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Yeni Çift Oluştur"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:letterSpacing="0.04"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bg_gradient_pill"
                app:backgroundTint="@null"
                app:cornerRadius="30dp"
                app:rippleColor="@color/ripple_white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJoinCouple"
                style="@style/Widget.Gzmy.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Çifte Katıl"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:letterSpacing="0.04"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp"
                app:strokeColor="@color/glass_card_border"
                app:strokeWidth="1dp"
                app:cornerRadius="30dp" />

        </LinearLayout>

        <!-- ── Create Couple Form ── -->
        <LinearLayout
            android:id="@+id/layoutCreateCouple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/layoutCreateForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_glass_card"
                    android:padding="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Çift Oluştur"
                        style="@style/TextAppearance.Gzmy.SectionTitle"
                        android:textSize="22sp"
                        android:layout_marginBottom="28dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Adınız"
                        android:textColorHint="@color/text_tertiary"
                        app:boxBackgroundColor="@color/glass_card"
                        app:boxStrokeColor="@color/primary_pink"
                        app:hintTextColor="@color/primary_pink_light"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusBottomEnd="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etYourNameCreate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreateSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Oluştur"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.04"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/bg_gradient_pill"
                        app:backgroundTint="@null"
                        app:cornerRadius="28dp"
                        app:rippleColor="@color/ripple_white" />

                </LinearLayout>

            </FrameLayout>

            <!-- Code Success State -->
            <LinearLayout
                android:id="@+id/layoutCodeSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_glass_hero"
                        android:padding="40dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_sparkle"
                            android:layout_marginBottom="12dp"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hazırsınız!"
                            android:textColor="@color/text_primary"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bu kodu partnerinle paylaş"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginBottom="32dp" />

                        <TextView
                            android:id="@+id/tvGeneratedCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC123"
                            android:textColor="@color/primary_pink"
                            android:textSize="44sp"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.35"
                            android:background="@drawable/bg_code"
                            android:paddingHorizontal="44dp"
                            android:paddingVertical="22dp"
                            android:layout_marginBottom="28dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyCode"
                            style="@style/Widget.Gzmy.Button.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kodu Kopyala"
                            android:textAllCaps="false"
                            android:fontFamily="sans-serif-medium"
                            app:cornerRadius="24dp" />

                    </LinearLayout>

                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinueAfterCreate"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Devam Et"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.04"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/bg_gradient_pill"
                    app:backgroundTint="@null"
                    app:cornerRadius="29dp"
                    app:rippleColor="@color/ripple_white" />

            </LinearLayout>

        </LinearLayout>

        <!-- ── Join Couple Form ── -->
        <FrameLayout
            android:id="@+id/layoutJoinCouple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çifte Katıl"
                    style="@style/TextAppearance.Gzmy.SectionTitle"
                    android:textSize="22sp"
                    android:layout_marginBottom="28dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adınız"
                    android:textColorHint="@color/text_tertiary"
                    app:boxBackgroundColor="@color/glass_card"
                    app:boxStrokeColor="@color/primary_pink"
                    app:hintTextColor="@color/primary_pink_light"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etYourNameJoin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Çift Kodu (6 haneli)"
                    android:textColorHint="@color/text_tertiary"
                    app:boxBackgroundColor="@color/glass_card"
                    app:boxStrokeColor="@color/primary_pink"
                    app:hintTextColor="@color/primary_pink_light"
                    android:layout_marginTop="18dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCoupleCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:maxLength="6"
                        android:inputType="textCapCharacters"
                        android:letterSpacing="0.25"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnJoinSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Katıl"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.04"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/bg_gradient_pill"
                    app:backgroundTint="@null"
                    app:cornerRadius="28dp"
                    app:rippleColor="@color/ripple_white" />

            </LinearLayout>

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:visibility="gone"
            android:indeterminateTint="@color/primary_pink" />

    </LinearLayout>

</ScrollView>
