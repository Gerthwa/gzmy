<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingTop="80dp"
        android:paddingBottom="40dp">

        <!-- Gradient line -->
        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_header_gradient"
            android:layout_marginBottom="32dp" />

        <!-- Brand -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gzmy"
            android:textColor="@color/primary_pink"
            android:textSize="48sp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.12"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seni hissediyorum"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:letterSpacing="0.08"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="60dp" />

        <!-- â”€â”€ Initial Buttons â”€â”€ -->
        <LinearLayout
            android:id="@+id/layoutInitialButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateCouple"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Yeni Ã‡ift OluÅŸtur"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:letterSpacing="0.02"
                android:background="@drawable/bg_gradient_pill"
                app:backgroundTint="@null"
                app:cornerRadius="29dp"
                app:rippleColor="@color/ripple_white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJoinCouple"
                style="@style/Widget.Gzmy.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Ã‡ifte KatÄ±l"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:letterSpacing="0.02"
                android:layout_marginTop="16dp"
                app:strokeColor="@color/glass_card_border"
                app:strokeWidth="1dp"
                app:cornerRadius="29dp" />

        </LinearLayout>

        <!-- â”€â”€ Create Couple Form â”€â”€ -->
        <LinearLayout
            android:id="@+id/layoutCreateCouple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/layoutCreateForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_glass_card"
                    android:padding="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ã‡ift OluÅŸtur"
                        style="@style/TextAppearance.Gzmy.SectionTitle"
                        android:textSize="20sp"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="AdÄ±nÄ±z"
                        android:textColorHint="@color/text_tertiary"
                        app:boxBackgroundColor="@color/glass_card"
                        app:boxStrokeColor="@color/primary_pink"
                        app:hintTextColor="@color/primary_pink_light"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etYourNameCreate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreateSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="OluÅŸtur"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_gradient_pill"
                        app:backgroundTint="@null"
                        app:cornerRadius="28dp"
                        app:rippleColor="@color/ripple_white" />

                </LinearLayout>

            </FrameLayout>

            <!-- Code Success -->
            <LinearLayout
                android:id="@+id/layoutCodeSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_glass_hero"
                        android:padding="36dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HazÄ±rsÄ±nÄ±z! ðŸ’•"
                            android:textColor="@color/text_primary"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bu kodu partnerinle paylaÅŸ"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginBottom="28dp" />

                        <TextView
                            android:id="@+id/tvGeneratedCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC123"
                            android:textColor="@color/primary_pink"
                            android:textSize="40sp"
                            android:fontFamily="sans-serif-black"
                            android:letterSpacing="0.3"
                            android:background="@drawable/bg_code"
                            android:paddingHorizontal="40dp"
                            android:paddingVertical="20dp"
                            android:layout_marginBottom="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyCode"
                            style="@style/Widget.Gzmy.Button.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kodu Kopyala"
                            android:textAllCaps="false"
                            app:cornerRadius="24dp" />

                    </LinearLayout>

                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinueAfterCreate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Devam Et"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_gradient_pill"
                    app:backgroundTint="@null"
                    app:cornerRadius="28dp"
                    app:rippleColor="@color/ripple_white" />

            </LinearLayout>

        </LinearLayout>

        <!-- â”€â”€ Join Couple Form â”€â”€ -->
        <FrameLayout
            android:id="@+id/layoutJoinCouple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_card"
                android:padding="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ã‡ifte KatÄ±l"
                    style="@style/TextAppearance.Gzmy.SectionTitle"
                    android:textSize="20sp"
                    android:layout_marginBottom="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AdÄ±nÄ±z"
                    android:textColorHint="@color/text_tertiary"
                    app:boxBackgroundColor="@color/glass_card"
                    app:boxStrokeColor="@color/primary_pink"
                    app:hintTextColor="@color/primary_pink_light"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etYourNameJoin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ã‡ift Kodu (6 haneli)"
                    android:textColorHint="@color/text_tertiary"
                    app:boxBackgroundColor="@color/glass_card"
                    app:boxStrokeColor="@color/primary_pink"
                    app:hintTextColor="@color/primary_pink_light"
                    android:layout_marginTop="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCoupleCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:maxLength="6"
                        android:inputType="textCapCharacters"
                        android:letterSpacing="0.2"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnJoinSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="KatÄ±l"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_gradient_pill"
                    app:backgroundTint="@null"
                    app:cornerRadius="28dp"
                    app:rippleColor="@color/ripple_white" />

            </LinearLayout>

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            android:indeterminateTint="@color/primary_pink" />

    </LinearLayout>

</ScrollView>
