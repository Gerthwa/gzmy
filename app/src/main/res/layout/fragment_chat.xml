<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- ── Premium Header ── -->
    <LinearLayout
        android:id="@+id/chatHeader"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_chat_header"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Geri" />

        <!-- Partner info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvChatPartnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <!-- Online status with indicator dot -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp">

                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/bg_online_dot"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="çevrimiçi"
                    android:textColor="@color/success_green"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.02" />

            </LinearLayout>

        </LinearLayout>

        <!-- Heart icon (decorative) -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart"
            android:alpha="0.5"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null" />

    </LinearLayout>

    <!-- ── Messages List ── -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/chatHeader"
        app:layout_constraintBottom_toTopOf="@id/chatInputBar" />

    <!-- ── Premium Input Bar ── -->
    <LinearLayout
        android:id="@+id/chatInputBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_chat_header"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etChatMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Mesaj yaz..."
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_tertiary"
            android:background="@drawable/bg_chat_input"
            android:paddingHorizontal="22dp"
            android:paddingVertical="15dp"
            android:maxLines="4"
            android:textSize="15sp" />

        <!-- Premium send button -->
        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendChat"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:background="@drawable/bg_send_button"
                app:backgroundTint="@null"
                app:icon="@drawable/ic_send_arrow"
                app:iconSize="22dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="26dp"
                app:rippleColor="@color/ripple_white" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
