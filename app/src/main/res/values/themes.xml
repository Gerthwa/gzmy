<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ═══════════════════════════════════════════════ -->
    <!--  GZMY PREMIUM THEME SYSTEM                     -->
    <!-- ═══════════════════════════════════════════════ -->

    <!-- Splash Screen Theme -->
    <style name="Theme.Gzmy.Splash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme -->
    <style name="Theme.Gzmy" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/primary_pink</item>
        <item name="colorPrimaryVariant">@color/primary_pink_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorSecondaryVariant">@color/secondary_purple</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Surfaces -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_elevated</item>

        <!-- Edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Interaction feedback -->
        <item name="colorControlHighlight">@color/ripple_pink</item>

        <!-- Typography -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Window animations -->
        <item name="android:windowAnimationStyle">@style/GzmyWindowAnimation</item>

        <!-- Component overrides -->
        <item name="materialButtonStyle">@style/Widget.Gzmy.Button</item>
        <item name="textInputStyle">@style/Widget.Gzmy.TextInputLayout</item>
    </style>

    <!-- Smooth window transitions -->
    <style name="GzmyWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <!-- ── Button Styles ── -->

    <style name="Widget.Gzmy.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <style name="Widget.Gzmy.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/glass_card_border</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/ripple_pink</item>
    </style>

    <style name="Widget.Gzmy.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/secondary_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Gzmy.Button.Ghost" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <!-- ── TextInputLayout ── -->

    <style name="Widget.Gzmy.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/glass_card</item>
        <item name="boxStrokeColor">@color/primary_pink</item>
        <item name="hintTextColor">@color/primary_pink_light</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <!-- ── Card Style ── -->

    <style name="Widget.Gzmy.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- ── Section Title ── -->

    <style name="TextAppearance.Gzmy.SectionTitle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Gzmy.Caption">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

</resources>
