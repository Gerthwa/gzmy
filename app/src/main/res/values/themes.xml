<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Screen Theme -->
    <style name="Theme.Gzmy.Splash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Gzmy" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_pink</item>
        <item name="colorPrimaryVariant">@color/primary_pink_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorSecondaryVariant">@color/secondary_purple</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/card_background</item>

        <!-- Status bar - transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Ripple color for interactive elements -->
        <item name="colorControlHighlight">@color/ripple_pink</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Smooth window animations -->
        <item name="android:windowAnimationStyle">@style/GzmyWindowAnimation</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Gzmy.Button</item>

        <!-- TextInputLayout -->
        <item name="textInputStyle">@style/Widget.Gzmy.TextInputLayout</item>
    </style>

    <!-- Window animation override for smoother activity transitions -->
    <style name="GzmyWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.Gzmy.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="Widget.Gzmy.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_pink</item>
        <item name="android:textColor">@color/primary_pink</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Tonal Button Style (secondary) -->
    <style name="Widget.Gzmy.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/secondary_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Circle Button Style -->
    <style name="Widget.Gzmy.Button.Circle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/card_background_elevated</item>
        <item name="cornerRadius">50dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.Gzmy.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/card_background</item>
        <item name="boxStrokeColor">@color/primary_pink</item>
        <item name="hintTextColor">@color/primary_pink_light</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.Gzmy.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>
