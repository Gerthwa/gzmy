<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Deep aurora gradient base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20FF4081"
                android:centerColor="#08B24BF3"
                android:endColor="#187C4DFF"
                android:angle="135" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- Layer 2: Frosted glass overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0CFFFFFF" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- Layer 3: Top highlight (simulates glass reflection) -->
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#10FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- Layer 4: Border glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="32dp" />
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
        </shape>
    </item>

</layer-list>
