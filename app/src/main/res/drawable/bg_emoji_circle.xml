<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Glass circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#14FFFFFF" />
        </shape>
    </item>

    <!-- Layer 2: Subtle pink tint -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#08FF4081"
                android:endColor="#08B24BF3"
                android:angle="135" />
        </shape>
    </item>

    <!-- Layer 3: Border glow -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#1CFFFFFF" />
        </shape>
    </item>

</layer-list>
