<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glass base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#12FFFFFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Gold shimmer tint -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0CFFD700"
                android:centerColor="#06FFB300"
                android:endColor="#08FF4081"
                android:angle="135" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Top highlight -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0AFFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Gold-tinted border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="#20FFD700" />
        </shape>
    </item>

</layer-list>
