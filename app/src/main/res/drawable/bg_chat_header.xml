<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Dark elevated base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0C0C18" />
        </shape>
    </item>

    <!-- Layer 2: Glass overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0AFFFFFF" />
        </shape>
    </item>

    <!-- Layer 3: Subtle bottom accent line -->
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#10FF4081" />
        </shape>
    </item>

</layer-list>
