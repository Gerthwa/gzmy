# Auto detect text files and perform LF normalization
* text=auto

# Kotlin/Java
*.kt text eol=lf
*.java text eol=lf
*.kts text eol=lf

# XML
*.xml text eol=lf

# JSON
*.json text eol=lf

# JavaScript
*.js text eol=lf

# Properties
*.properties text eol=lf

# Markdown
*.md text eol=lf

# Shell scripts
*.sh text eol=lf
gradlew text eol=lf

# Binary
*.jar binary
*.png binary
*.jpg binary
*.webp binary
